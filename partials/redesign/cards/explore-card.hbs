<a href="{{url}}" class="block h-[240px] relative group rounded-2xl sm:rounded-[20px] overflow-hidden">
    <div class="h-full relative {{^if feature_image}}bg-[#EEEFF0]{{/if}}">
        <div class="absolute top-0 left-0 w-full h-full z-[1] bg-dark/10"></div>
        {{#if feature_image}}
                {{> image
                image_class="lazyload w-full h-full object-cover duration-500 transform scale-100 group-hover:scale-105"
                image_url=feature_image
                size_s=true
                size_m=true
            }}
        {{/if}}
    </div>
    <div class="absolute bottom-0 left-0 z-10 px-6 xs:px-4 md:px-7 py-5">
        <h3 class="text-2xl sm:text-[28px] leading-normal text-white font-semibold">{{name}}</h3>
    </div>
</a>