{{#has visibility="public"}}
    <div class="flex gap-3 relative">
        <a class="w-10 h-10 flex items-center justify-center border border-[#D0D5DD] rounded-lg group copy-link" data-link="{{@site.url}}{{url}}" href="#">
            <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9.59028 14.3032L8.41177 15.4817C6.78459 17.1089 4.1464 17.1089 2.51922 15.4817C0.892032 13.8546 0.892032 11.2164 2.51922 9.58919L3.69773 8.41068M14.3043 9.58919L15.4828 8.41067C17.11 6.78349 17.11 4.1453 15.4828 2.51812C13.8557 0.890933 11.2175 0.890933 9.59028 2.51812L8.41177 3.69663M6.08436 11.9166L11.9177 6.08325" stroke="#344054" stroke-width="1.66667" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>

            <span class="copied">{{t "Copied!"}}</span>
        </a>

        <a class="text-pragrapgh w-10 h-10 flex items-center justify-center border border-[#D0D5DD] rounded-lg" onclick="window.open(this.href, 'pop-up', 'left=20,top=20,width=500,height=500,toolbar=1,resizable=0'); return false;" href="https://twitter.com/share?text={{encode title}}&url={{url absolute="true"}}" target="_blank">
            {{> icons/twitter}}
        </a>
        <a class="text-pragrapgh w-10 h-10 flex items-center justify-center border border-[#D0D5DD] rounded-lg" onclick="window.open(this.href, 'pop-up', 'left=20,top=20,width=500,height=500,toolbar=1,resizable=0'); return false;" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" target="_blank">              
             {{> icons/facebook}}
        </a>

        <a class="text-pragrapgh w-10 h-10 flex items-center justify-center border border-[#D0D5DD] rounded-lg" onclick="window.open(this.href, 'pop-up', 'left=20,top=20,width=500,height=500,toolbar=1,resizable=0'); return false;" href="https://www.linkedin.com/shareArticle?mini=true&url={{encode title}}&url={{url absolute="true"}}">
            {{> icons/linkedIn}}
        </a>
    </div>
{{/has}}



