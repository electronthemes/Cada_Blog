{{!-- Blog --}}
<div class="hidden sm:flex items-start gap-[40px]">
    <div class="max-w-[687px] w-full">
        {{#foreach posts to="1" filter="featured:true"}}
            {{> redesign/cards/feature-card}}
        {{/foreach}}
    </div>
   
    <div class="max-w-[495px] w-full">
       
        <div class="">
            {{#foreach posts from="2" filter="featured:true"}}
             {{#has number="2"}}
             <h2 class="text-[40px] !leading-tight font-semibold mb-10  {{not-authors}}">Empfohlene Artikel</h2>
            {{/has}}
            {{> redesign/cards/feature-card-without-image}}
            {{/foreach}}
        </div>
    </div>
</div>
{{!-- Blog Slider --}}
<div class="block sm:hidden">
    <h2 class="text-3xl xs:text-[36px] !leading-tight font-semibold mb-10 xs:mb-8 sm:mb-10 {{not-authors}}">Empfohlene Artikel</h2>
    <div class="swiper hero_slider max-w-[300px] xs:max-w-[560px]">
        <div class="swiper-wrapper">
             {{#foreach posts}}
            <div class="swiper-slide">
                {{> redesign/cards/feature-card}}
            </div>
            {{/foreach}}
        </div>
    </div>
    <div class="hero_slider_pagination"></div>
</div>