{{!< default}}

{{!-- Banner Start --}}
<div class="pt-[50px] pb-[30px] sm:py-[50px] lg:py-[60px]">
    <div class="container">
        <div class="max-w-[1224px] mx-auto flex items-center justify-between gap-8 sm:gap-10 flex-col sm:flex-row">
            <div class="sm:max-w-[400px] md:max-w-[520px] w-full {{^if feature_image}}banner-center{{/if}}">
                <span class="text-[14px] text-[#3D4044] block tracking-[-0.14px]">Unser Blog</span>
                <h1 class="mt-2 md:mt-[18px] text-4xl md:text-[56px] font-semibold leading-[1.2]">{{@site.title}}</h1>
                <p class="mt-3 md:mt-4 text-base md:text-lg tracking-[-0.18px]">{{@site.description}}</p>
                {{!-- From --}}
                <form class="mt-6 md:mt-10 flex gap-4 relative flex-wrap " data-members-form="subscribe">
                    <input class="w-full flex-1 rounded-lg duration-300 bg-transparent py-3 px-4 border border-[#D0D5DD] focus:outline-none focus:border-primary shadow-none target:outline-none focus-visible:outline-none" type="email" placeholder="Deine E-Mail-Adresse" data-members-email required>
                    <h4 class="success-message hidden p-5 w-full bg-[#fff]/75 text-[#008000] font-normal text-base text-center absolute top-full left-0">Danke sch√∂n! Ihre Einsendung ist eingegangen!</h4>
                    <button class="btn-primary " type="submit">Bleibe informiert</button>
                    <p data-members-error class="error-message mt-5 absolute top-full left-0 text-[#de2525] hidden"></p>
                </form>
            </div>
            {{#if @site.cover_image}}
                <div class="sm:max-w-[600px] w-full rounded-2xl overflow-hidden">
                    <img src="{{@site.cover_image}}" alt="{{@site.title}}">
                </div>
            {{/if}}
        </div>
    </div>
</div>
{{!-- Banner End --}}

{{!-- Home Card Area Start --}}
<div class="py-[30px] xs:pt-[40px] lg:py-[60px] scroll-mt-100" id="articles">
    <div class="container">
        {{> post-loop}}
    </div>
</div>
{{!-- Home Card Area End --}}

{{!-- Sign Up Area Start --}}
<div class="py-[30px] sm:py-10 lg:py-[60px]">
    <div class="container">
        <div class="max-w-[1224px] mx-auto">
            {{> sign-up}}
        </div>
    </div>
</div>
{{!-- Sign Up Area End --}}


