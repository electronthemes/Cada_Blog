<!DOCTYPE html>
<html lang="{{@site.locale}}">
    <head>
        <title>{{meta_title}}</title>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="HandheldFriendly" content="True" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        {{{block "additional_links"}}}
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="{{asset "/css/style.css"}}">
        
        {{ghost_head}}
        <script>
            var pagination_next_page_number = '{{ pagination.next }}';
            var pagination_available_pages_number = '{{ pagination.pages }}';
        </script>

    </head>
    <body class="{{body_class}}">
        {{> header}}

        {{{body}}}

        {{> footer}}
       
    <script src="{{asset "/js/scripts.js"}}"></script>

    <script>
        const languageBeforeUrl = document.querySelector('.language-curent-url-before');
        const languageCurentUrl = document.querySelector('.language-curent-url');
        if(languageCurentUrl){
            languageBeforeUrl.href = languageCurentUrl.innerHTML;
            languageCurentUrl.style.display = 'none';
        }
    </script>
    {{!-- to show block scripts --}}
    {{{block "scripts"}}}
    {{!-- ghost footer --}}
    {{ghost_foot}}
    
    </body>

</html>



