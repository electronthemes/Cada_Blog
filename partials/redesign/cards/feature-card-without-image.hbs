{{!-- Single Blog --}}
<div class="pb-4 mb-4 border-b border-border_color featured-article line-hover-wrap">
    <div class="flex items-center flex-wrap gap-2">
        {{#has tag="new"}}
        {{#foreach tags limit="1"}}
            <a href="{{url}}" class="text-xs leading-[18px] font-medium py-1 px-3 rounded-[32px] text-title duration-300 bg-primary">neu</a>
        {{/foreach}}
        {{/has}}
        {{#foreach tags limit="1"}}
            <a href="{{url}}" class="text-xs leading-[18px] font-semibold py-1 px-3 bg-[#F8F8F8] rounded-[32px] text-pragrapgh inline-block"><span class="sm:translate-y-[1px] block">{{name}}</span></a>
        {{/foreach}}
    </div>
    
    
    <h5 class="text-lg !leading-normal font-semibold tracking-[-0.01px] mt-3 underline-animation"><a
            href="{{url}}">{{title}}</a></h5>
    <ul class="flex items-center mt-3 gap-4">
        <li class="text-sm leading-[22px] tracking-[-0.01px] text-light_gray">{{date published_at format="MMM, YYYY"}}</li>
        <li
            class="text-sm leading-[22px] tracking-[-0.01px] text-light_gray flex items-center gap-[6px]">
            {{> redesign/icons/clock}}
            {{reading_time minute="Nur eine Minute" minutes="% min"}}
        </li>
    </ul>
</div>