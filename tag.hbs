{{!< default }}

{{#tag}}
    <div class="pt-[150px] md:pt-[175px] pb-16 xs:pb-20 lg:pb-[129px] bg-[#FCF7E8] relative z-[1]">
        <img class="w-[40%] sm:w-auto absolute bottom-0 left-[5%] -z-[1]" src="{{asset 'img/post-header-shape-01.png'}}" alt="shape">
        <img class="w-[40%] sm:w-auto absolute top-0 right-0 -z-[1]" src="{{asset 'img/post-header-shape-02.png'}}" alt="shape">
        <div class="container">
            <div class="max-w-[1016px] mx-auto">
                <a href="{{@site.url}}" class="flex items-center gap-[10px]">
                    {{> icons/back-arrow}}
                    Back to Blog
                </a>
                <h1 class="text-[34px] xs:text-[44px] md:text-[56px] leadig-[1.1] font-semibold font-Jakarta mt-[18px]">
                    {{name}}
                </h1>
            </div>
        </div>
    </div>
{{/tag}}


<div class="pb-[30px] sm:pb-10 lg:pb-[60px] pt-[60px] sm:pt-10 lg:pt-[120px]">
    <div class="container">
        <div class="max-w-[1224px] mx-auto">    
            <div class="post-card-nav mb-8 sm:mb-12 md:mb-16">
                {{#get "tags" limit="all"}}
                {{#if tags}}
                <ul class="flex gap-2 flex-wrap">
                        <li><a class="text-[#777C85] duration-300 py-3 sm:py-4 px-5 sm:px-6 text-sm sm:text-base leading-none tracking-[-0.16px] font-medium rounded-lg inline-block c-tags-list__link" href="/">All Categories</a></li>
                        
                        {{#foreach tags}}
                        <li><a class="text-[#777C85] duration-300 py-3 sm:py-4 px-5 sm:px-6 text-sm sm:text-base leading-none tracking-[-0.16px] font-medium rounded-lg inline-block c-tags-list__link" href="{{url}}">{{name}}</a></li>
                        {{/foreach}}
                    </ul>
                {{/if}}
                {{/get}}
            </div>

            <div class="grid grid-cols-1 xs:grid-cols-2 md:grid-cols-3 gap-6 js-post-wrapper">
                {{#foreach posts}}
                    {{> post-card extra_class="js-post-card" }}
                {{/foreach}}
            </div>
            <div class="flex justify-center mt-8 sm:mt-12 show-more-box">
                <a href="#" class="btn-primary show-more">Load More Articles</a>
            </div>
        </div>
    </div>
</div>


{{!-- Sign Up Area Start --}}
<div class="py-[30px] sm:py-10 lg:py-[60px]">
    <div class="container">
        <div class="max-w-[1224px] mx-auto">
            {{> sign-up}}
        </div>
    </div>
</div>
{{!-- Sign Up Area End --}}




