<div class="grid xs:grid-cols-2 gap-6 group line-hover-wrap {{class}} js-tag-card">
    <div class="relative rounded-2xl overflow-hidden max-h-[288px] min-h-[288px] {{^if feature_image}}bg-[#EEEFF0]{{/if}}">
        {{#if feature_image}}
            <a href="{{url}}">
                {{> image
                image_class="lazyload w-full h-full duration-500 transform scale-100 group-hover:scale-110 object-cover"
                image_url=feature_image
                size_s=true
                size_m=true
            }}
            </a>
        {{/if}}
        {{!-- tag --}}
        
            <div class="absolute z-10 top-[14px] left-0 flex gap-2 w-full xs:w-auto px-[15px]">
                {{#has tag="Neu"}}
                    {{#foreach tags limit="1"}}
                        <a href="{{url}}" class="text-xs leading-[18px] font-medium py-1 px-3 rounded-[32px] text-title duration-300 bg-primary">Neu</a>
                    {{/foreach}}
                {{/has}}
                {{#if tags}}
                {{#foreach tags limit="1"}}
                    <a href="{{url}}" class="text-xs leading-[18px] font-medium py-1 px-3 bg-white rounded-[32px] text-pragrapgh inline-block"><span class="sm:translate-y-[1px] block">{{name}}</span></a>
                {{/foreach}}
                {{/if}}
            </div>
       
    </div>
    <div class="">
        <ul class="flex items-center gap-4">
            <li class="text-xs xs:text-sm leading-[20px] xs:leading-[22px] tracking-[-0.01px] text-light_gray">{{date published_at format="MMM, YYYY"}}</li>
            <li class="text-xs xs:text-sm leading-[20px] xs:leading-[22px] tracking-[-0.01px] text-light_gray flex items-center gap-[6px]">
                {{> redesign/icons/clock}}
                {{reading_time minute="Nur eine Minute" minutes="% min"}}
            </li>
        </ul>
        <h4 class="text-lg xs:text-xl font-semibold leading-[26px] xs:leading-[28px] tracking-[-0.01px] font-inter mt-3 underline-animation"><a href="{{url}}">{{title}}</a></h4>
        <p class="tracking-[-0.01px] mt-3 line-clamp-5">{{excerpt}}</p>
        <a href="{{url}}" class="inline-flex items-center gap-3 text-base leading-normal text-[#3D4044] font-medium mt-3">
            Mehr erfahren
            {{> redesign/icons/bradcamb-right-arrow}}
        </a>
    </div>
</div>