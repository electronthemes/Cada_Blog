{{!< default}}

{{!-- Banner Start --}}
<div class="pt-[50px] pb-[30px] sm:py-[50px] lg:py-[60px]">
    <div class="container">
        <div class="max-w-[1224px] mx-auto flex items-center justify-between gap-8 sm:gap-10 flex-col sm:flex-row">
            <div class="sm:max-w-[320px] md:max-w-[440px] w-full {{^if feature_image}}banner-center{{/if}}">
                <span class="text-[14px] text-[#3D4044] block tracking-[-0.14px]">Blog</span>
                <h1 class="mt-2 md:mt-[18px] text-4xl md:text-[56px] font-semibold leading-[1.2]">{{@site.title}}</h1>
                <p class="mt-3 md:mt-4 text-base md:text-lg tracking-[-0.18px]">{{@site.description}}</p>
                {{!-- From --}}
                <form class="mt-6 md:mt-10 flex gap-4 max-w-[380px] relative" data-members-form="subscribe">
                    <input class="flex-1 w-full rounded-lg duration-300 bg-transparent py-3 px-4 border border-[#D0D5DD] focus:outline-none focus:border-primary shadow-none target:outline-none focus-visible:outline-none" type="email" placeholder="Enter your email" data-members-email required>
                    <h4 class="success-message hidden p-5 w-full bg-[#fff]/75 text-[#008000] font-normal text-base text-center absolute top-full left-0">Thank you! Your submission has been received!</h4>
                    <button class="btn-primary w-[116px]" type="submit">Subscribe</button>
                    <p data-members-error class="error-message mt-5 absolute top-full left-0 text-[#de2525] hidden"></p>
                </form>
            </div>
            {{#if @site.cover_image}}
                <div class="sm:max-w-[600px] w-full rounded-2xl overflow-hidden">
                    <img src="{{@site.cover_image}}" alt="{{@site.title}}">
                </div>
            {{/if}}
        </div>
    </div>
</div>
{{!-- Banner End --}}

{{!-- Home Card Area Start --}}
<div class="py-[30px] xs:pt-[40px] lg:py-[60px]">
    <div class="container">
        <div class="max-w-[1224px] mx-auto">
            <div class="post-card-nav mb-6 sm:mb-10 md:mb-14">
                {{#get "tags" limit="all"}}
                {{#if tags}}
                <ul class="flex gap-2 w-full flex-nowrap overflow-y-auto whitespace-nowrap pb-2">
                    <li><a class="text-[#777C85] duration-300 py-3 sm:py-4 px-5 sm:px-6 text-sm sm:text-base leading-none tracking-[-0.16px] font-medium rounded-lg inline-block c-tags-list__link" href="/">All Categories</a></li>
                    
                    {{#foreach tags}}
                    <li><a class="text-[#777C85] duration-300 py-3 sm:py-4 px-5 sm:px-6 text-sm sm:text-base leading-none tracking-[-0.16px] font-medium rounded-lg inline-block c-tags-list__link" href="{{url}}">{{name}}</a></li>
                    {{/foreach}}
                </ul>
                {{/if}}
                {{/get}}
            </div>
            <div class="grid xs:grid-cols-2 md:grid-cols-3 gap-y-8 md:gap-y-12 gap-x-6">
                {{#foreach posts}}
                    {{> post-card}}
                {{/foreach}}
            </div>
        </div>
        {{pagination}}
    </div>
</div>
{{!-- Home Card Area End --}}

{{!-- Sign Up Area Start --}}
<div class="py-[30px] sm:py-10 lg:py-[60px]">
    <div class="container">
        <div class="max-w-[1224px] mx-auto">
            {{> sign-up}}
        </div>
    </div>
</div>
{{!-- Sign Up Area End --}}
